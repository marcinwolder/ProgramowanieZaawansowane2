@{
    ViewBag.Title = "Admin Panel";
    Layout = "_Layout";
}

<h2>Admin Panel:</h2>

<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Airports</h5>
                    <p class="card-text">Manage airports visible on website</p>
                    <a asp-area="" asp-controller="AdminAirport" asp-action="Index" class="btn btn-primary">Go to panel</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Locations</h5>
                    <p class="card-text">Manage locations for airports</p>
                    <a asp-area="" asp-controller="AdminLocation" asp-action="Index" class="btn btn-primary">Go to panel</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Connections</h5>
                    <p class="card-text">Manage connections between airports</p>
                    <a asp-area="" asp-controller="AdminConnection" asp-action="Index" class="btn btn-primary">Go to panel</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage users on website</p>
                    <a asp-area="" asp-controller="AdminUser" asp-action="Index" class="btn btn-primary">Go to panel</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Travelers</h5>
                    <p class="card-text">Manage travelers. Traveler is a person that you buy ticket for</p>
                    <a asp-area="" asp-controller="AdminTraveler" asp-action="Index" class="btn btn-primary">Go to panel</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tickets</h5>
                    <p class="card-text">Manage tickets</p>
                    <a asp-area="" asp-controller="AdminTicket" asp-action="Index" class="btn btn-primary">Go to panel</a>
                </div>
            </div>
        </div>
    </div>
</div>