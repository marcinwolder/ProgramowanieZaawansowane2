@model IEnumerable<Airly.Models.Traveler>
@{
    ViewData["Title"] = "My passengers";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add passenger</a>
    </p>

    <table class="table table-sm">
        <thead class="table-light">
        <tr>
            <th>#</th><th>First name</th><th>Last name</th><th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.FirstName</td>
                <td>@t.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
